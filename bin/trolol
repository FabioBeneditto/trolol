#!/usr/bin/env node

var program = require('commander');
var trolol = require('../src/trolol.js');

program
    .version('0.0.0');

program
    .command('website')
    .arguments('<given> <to>')
    .description('Mirror webpage to a different page')
    .action(trolol.website);

program
    .command('command-not-found')
    .alias('cmd')
    .arguments('<command>')
    .description('Overwrite command with a fake alias')
    .action(trolol.commandNotFound);

program
    .command('friday')
    .option('-w, --wait <seconds>', 'Wait with the troll', parseInt)
    .description('Open "Friday by Rebecca Black" in a browser')
    .action(function (options) {
        trolol.friday(options.wait);
    });

program
    .command('volume-level')
    .alias('vol')
    .arguments('<length>')
    .option('-w, --wait <seconds>', 'Wait with the troll', parseInt)
    .description('[MAC ONLY] Change volume level randomly in period of time (length in seconds)')
    .action(function (length, options) {
        trolol.volumeLevel(length, options.wait);
    });

program.parse(process.argv);
