#!/usr/bin/env node

var program = require('commander');
var trolol = require('../src/trolol.js');

program
    .version('0.0.0');

program
    .command('website')
    .arguments('<given> <to>')
    .description('Mirror webpage to a different page')
    .action(trolol.website);

program
    .command('command-not-found')
    .alias('cmd')
    .arguments('<command>')
    .description('Overwrite command with a fake alias')
    .action(trolol.commandNotFound);

program
    .command('friday')
    .arguments('[wait]')
    .description('Open "Friday by Rebecca Black" in a browser with a wait time in seconds')
    .action(trolol.friday);

program.parse(process.argv);
